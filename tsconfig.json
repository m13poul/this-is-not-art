{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "../../shared": ["./shared/index.ts"],
      "../../shared/*": ["./shared/*"]
    }
  },
  "include": ["src/**/*", "shared/**/*"]
}
